<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SoftValue" parent="TextAppearance.AppCompat.Large">
    <item name="android:textColor">#000</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/hand_value_size</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:layout_margin">@dimen/fab_margin</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="HardValue" parent="SoftValue">
    <item name="android:textStyle">bold</item>
  </style>
  <style name="BustedValue" parent="HardValue">
    <item name="android:textColor">@android:color/holo_red_dark</item>
  </style>
  <style name="BlackJackValue" parent="HardValue">
    <item name="android:textColor">@android:color/holo_blue_dark</item>
  </style>

</resources>
